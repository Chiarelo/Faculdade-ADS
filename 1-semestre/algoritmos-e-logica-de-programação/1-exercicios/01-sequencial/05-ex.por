programa
{
	
	funcao inicio()
	{
		real num, num2, media
		escreva("Digite um numero: ")
		leia(num)
		escreva("Digite um número: ")
		leia(num2)
		limpa()

		media = (num + num2) / 2
		escreva("O primeiro valor inserido foi: ", num, "\n")
		escreva("O segundo valor inserido foi: ", num2, "\n")
		escreva("A média dos valores é: ", media)
		
	}
}
